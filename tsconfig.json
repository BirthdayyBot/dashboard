{
    "extends": "@sapphire/ts-config",
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "noEmit": true,
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            },
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "skipLibCheck": true,
        "target": "ES6",
        "typeRoots": [
            "./node_modules/@types",
            "./types",
            "@lib/types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "next-env.d.ts",
        "next.config.js"
    ]
}